{
    "name": "booking-system-plugin",
    "version": "2.3.2",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:quiet": "jest --silent",
        "test:all": "npm run test",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "lint:errors": "eslint src --ext .ts,.tsx --quiet",
        "lint:check": "eslint src --ext .ts,.tsx --max-warnings 0",
        "lint:format": "npm run lint:fix && npm run format",
        "check-all": "npm run format:check && npm run lint:check",
        "ci:lint": "npm run format:check && npm run lint:errors",
        "build": "webpack --mode=production --env production",
        "build:dev": "webpack --mode=development",
        "build:test": "webpack --mode=development --env test",
        "dev": "webpack --watch --mode=development",
        "dev:test": "webpack --watch --mode=development --env test",
        "zip": "npm run build && powershell Compress-Archive -Path dist/* -DestinationPath extension.zip -Force",
        "zip:dev": "npm run build:dev && powershell Compress-Archive -Path dist/* -DestinationPath extension-dev.zip -Force",
        "zip:test": "npm run build:test && powershell Compress-Archive -Path dist/* -DestinationPath extension-test.zip -Force",
        "prepare": "husky"
    },
    "author": "Ilya Murashka",
    "license": "ISC",
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@types/chrome": "^0.1.32",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.1",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "chai": "^6.2.1",
        "chai-as-promised": "^8.0.1",
        "copy-webpack-plugin": "^13.0.0",
        "css-loader": "^7.1.2",
        "dotenv-webpack": "^8.1.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-webpack-plugin": "^4.0.1",
        "html-webpack-plugin": "^5.6.5",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^16.1.5",
        "prettier": "^3.7.4",
        "sinon-chrome": "^3.0.1",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.4.6",
        "ts-loader": "^9.5.2",
        "typescript": "^5.9.3",
        "webpack": "^5.103.9",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.86.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix --quiet",
            "prettier --write"
        ],
        "*.{js,jsx}": [
            "eslint --fix --quiet",
            "prettier --write"
        ],
        "*.{json,css,md,html}": [
            "prettier --write"
        ]
    }
}
