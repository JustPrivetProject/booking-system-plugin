{
    "manifest_version": 3,
    "name": "Booking System Plugin",
    "version": "2.1.15",
    "description": "Help to booking slot",
    "permissions": ["storage", "webRequest", "notifications", "tabs"],
    "host_permissions": ["https://ebrama.baltichub.com/*", "https://*.supabase.co/*"],
    "icons": {
        "16": "128.png",
        "48": "128.png",
        "128": "128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon-144x144.png",
            "48": "icon-144x144.png",
            "128": "icon-144x144.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*.baltichub.com/*"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["welcome.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src *;"
    }
}
